<!DOCTYPE html>
<html lang="en">
<head>
    <!--CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700&display=swap" rel="stylesheet">
    <title>Answer</title>
    
</head>
<body>

    <div class="container-answers">
        <h1><%=question.title%></h1>
        <h2>Tags: <%=question.tags%></h2>

        <div class="table-answers">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Answers</th>
                    </tr>
                </thead>
                <tbody>

                 <%   answersAr.forEach(function(answer){ %>
                        <tr>
                            <td><%=answer.title%></td>
                        </tr>
                 <%   }); %>

                    <!-- <tr>
                        <td>*Answers here*</td>
                    </tr> -->



                </tbody>
            </table>

        </div>
       
        <div class="add-answer">
            <h2>Add Your Answer</h2>
            <form action="/new-answer" method="post">
                <label class="form-label">Answer</label>
                <input name="answer" type="text" class="form-control">
                <button class="btn btn-primary" type="submit" name="idPregunta" value="<%=question.id%>">Answer It!</button>
            </form>
        </div>
        

    </div>

    
   





    <!--Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>